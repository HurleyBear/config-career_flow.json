  "summaryLogic": {
    "whyEvidence": {
      "maxBullets": 3,
      "templates": {
        "depth": "You’re motivated by getting stronger in your current lane and increasing impact through mastery.",
        "scope": "You’re pulled toward bigger ownership, bigger decisions, and broader responsibility.",
        "breadth": "You’re pulled toward learning new parts of the business and expanding perspective.",
        "recalibration": "You’re signaling a need to rebuild capacity, clarity, or skills before accelerating."
      },
      "selectionRule": "Use the top 2–3 dominant signals by count; if confidence is early, include one 'mixed signals' bullet."
    },

    "intentTranslationRules": [
      {
        "when": { "primaryPath": "levelUp", "versionOfPath.levelUpType": "peopleLeader" },
        "then": {
          "intentTranslation": "Wants to step into people leadership—growing impact through others, not just personal execution.",
          "coachingFocus": [
            "Find a stretch opportunity that involves leading through others (delegation + feedback + follow-through).",
            "Pressure-test interest in performance management and accountability conversations."
          ],
          "watchOuts": [
            "Don’t equate ‘level up’ with title alone—ensure scope + leadership reps exist first.",
            "Avoid over-indexing on being the hero/expert instead of building others."
          ]
        }
      },
      {
        "when": { "primaryPath": "levelUp", "versionOfPath.levelUpType": "scopeOwner" },
        "then": {
          "intentTranslation": "Wants expanded ownership and outcomes—more scope, stronger decision rights, bigger bets.",
          "coachingFocus": [
            "Assign an initiative with clear outcomes and stakeholder visibility.",
            "Give decision reps: define decision rights, tradeoffs, and post-decision learning."
          ],
          "watchOuts": [
            "If ambiguity tolerance is low, add structure: guardrails + checkpoints.",
            "Avoid stretching without authority—match accountability with decision rights."
          ]
        }
      },
      {
        "when": { "primaryPath": "levelUp", "versionOfPath.levelUpType": "visibilityInfluence" },
        "then": {
          "intentTranslation": "Wants to expand influence and visibility—representing work, shaping direction, aligning stakeholders.",
          "coachingFocus": [
            "Put them in forums where they can represent work and influence decisions.",
            "Coach executive-ready communication: clarity, tradeoffs, recommendations."
          ],
          "watchOuts": [
            "Visibility without substance can backfire—anchor influence in results and credibility.",
            "Ensure they’re not avoiding accountability by seeking visibility only."
          ]
        }
      },
      {
        "when": { "primaryPath": "levelUp", "versionOfPath.levelUpType": "subjectMatterExpert" },
        "then": {
          "intentTranslation": "Wants to Level Up as a subject matter expert—deeper expertise with broader business impact.",
          "coachingFocus": [
            "Define what ‘SME at the next level’ looks like (problems owned, influence, outcomes).",
            "Create opportunities to teach/standardize practices across teams."
          ],
          "watchOuts": [
            "Avoid becoming a bottleneck—build systems and knowledge-sharing.",
            "Ensure expertise stays connected to business outcomes, not just technical depth."
          ]
        }
      },

      {
        "when": { "primaryPath": "thrive" },
        "then": {
          "intentTranslation": "Wants intentional depth and impact in the current role—growth without a role change.",
          "coachingFocus": [
            "Define a meaningful stretch inside the role (complexity, ownership, influence, or mentoring).",
            "Align on visible outcomes so progress is recognized."
          ],
          "watchOuts": [
            "Avoid comfort masquerading as growth—make the stretch explicit.",
            "Ensure work remains visible and transferable."
          ]
        }
      },

      {
        "when": { "primaryPath": "moveAcross" },
        "then": {
          "intentTranslation": "Wants a lateral move with purpose—broadening capability, perspective, or fit.",
          "coachingFocus": [
            "Clarify the target: what they want to gain and what success looks like after the move.",
            "Identify low-risk ways to test fit (shadowing, short projects, working groups)."
          ],
          "watchOuts": [
            "Avoid lateral drift—anchor the move in a clear purpose and learning plan.",
            "Confirm the move isn’t avoidance of a solvable issue in the current role."
          ]
        }
      },

      {
        "when": { "primaryPath": "expandView" },
        "then": {
          "intentTranslation": "Wants exploration with structure—pressure-testing fit before committing to a direction.",
          "coachingFocus": [
            "Set a short, time-boxed exploration plan with a clear question to answer.",
            "Choose 1–2 experiences that create real signal (not just curiosity)."
          ],
          "watchOuts": [
            "Exploration can become indefinite—set a decision checkpoint (30/60/90).",
            "Avoid ‘busy exploration’ that doesn’t change understanding or options."
          ]
        }
      },

      {
        "when": { "primaryPath": "reset" },
        "then": {
          "intentTranslation": "Needs a reset to rebuild sustainability, clarity, or skills before the next move.",
          "coachingFocus": [
            "Normalize the reset; co-create a plan (workload, learning, boundaries, timeline).",
            "Define what ‘ready again’ looks like and how to measure it."
          ],
          "watchOuts": [
            "Don’t confuse reset with disengagement—look for intentional rebuilding steps.",
            "Avoid returning to the same overload pattern without structural changes."
          ]
        }
      }
    ],

    "fallbackIntentTranslation": {
      "intentTranslation": "Wants progress and clarity; answers show mixed signals, so the focus is on structured next steps that create evidence.",
      "coachingFocus": [
        "Treat this as a 30–60 day discovery sprint with a clear learning question.",
        "Agree on one experiment that creates signal (scope, depth, or breadth)."
      ],
      "watchOuts": [
        "Don’t force certainty too early—create evidence first."
      ]
    }
  },

